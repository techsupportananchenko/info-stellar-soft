{
  "name": "stellarsoft",
  "version": "1.0.0",
  "description": "The simplest WordPress starter theme including full setup for Sass, PostCSS, Autoprefixer, Vite, TypeScript, Browsersync, imagemin, Prettier, ESLint.",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "config": {
    "browsersync": {
      "proxy": "stellar-soft.local",
      "port": 3000
    },
    "image": {
      "src": "src/images",
      "dist": "assets/images"
    },
    "js": {
      "entry": [
        "src/js/main.js"
      ],
      "output": "assets/js"
    },
    "css": {
      "src": "src/sass",
      "dist": "assets/css",
      "style": "compressed"
    }
  },
  "scripts": {
    "dev": "npm-run-all -p imagemin css -p browser watch",
    "browser": "cross-conf-env browser-sync \"http://$npm_package_config_browsersync_proxy\" -f \"**/*.php\" \"$npm_package_config_css_dist\" \"$npm_package_config_js_output\" \"$npm_package_config_image_dist\" --port $npm_package_config_browsersync_port",
    "build": "run-p imagemin css vite",
    "css": "run-p sass",
    "imagemin": "cross-conf-env node imagemin.mjs \"$npm_package_config_image_src/**/*\" $npm_package_config_image_dist",
    "sass": "cross-conf-env sass $npm_package_config_css_src:$npm_package_config_css_dist --style=compressed",
    "postsass": "cross-conf-env postcss $npm_package_config_css_dist/*.css --use=autoprefixer --dir=$npm_package_config_css_dist",
    "vite": "vite build",
    "watch:imagemin": "cross-conf-env onchange \"$npm_package_config_image_src/**/*\" -e \".DS_Store\" -- npm run imagemin",
    "watch:sass": "cross-conf-env onchange \"$npm_package_config_css_src/**/*\" -e \".DS_Store\" -- npm run sass",
    "watch:vite": "npm run vite -- --watch --mode development",
    "watch": "run-p watch:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/techsupportananchenko/stellarsoft"
  },
  "keywords": [
    "WordPress",
    "Browsersync",
    "Sass",
    "PostCSS",
    "Autoprefixer",
    "imagemin",
    "vite",
    "ESLint"
  ],
  "author": "Stellar Soft",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/techsupportananchenko/stellarsoft"
  },
  "homepage": "https://github.com/techsupportananchenko/stellarsoft",
  "engines": {
    "node": ">= 18.16",
    "npm": ">= 9.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@barba/prefetch": "^2.2.0",
    "@ixkaito/imagemin": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.3",
    "cross-conf-env": "^1.3.0",
    "eslint": "^8.43.0",
    "globby": "^13.2.0",
    "gsap": "^3.13.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.4",
    "swiper": "latest",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "@barba/core": "^2.10.0",
    "@barba/css": "^2.1.16",
    "page": "^1.11.6"
  }
}
